@model int

<nav aria-label="Page navigation example">
    <ul class="pagination">
        @if (Model > 1)
        {
            <li class="page-item">
                <a class="page-link" href="@Html.PreviousPageHref()" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
        }
        <li class="page-item">
            <span class="page-link">
                @Model
                <span class="sr-only">(current)</span>
            </span>
        </li>
        <li class="page-item">
            <a class="page-link" href="@Html.NextPageHref()" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>
</nav>