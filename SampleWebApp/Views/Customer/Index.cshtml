@model IEnumerable<Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Customers</h2>

@using (Html.BeginForm("Index", "Customer", FormMethod.Get))
{
    <div class="col-sm-6">
        <label class="control-label">Type:</label>
        @Html.DropDownList("TypeId", ViewData["CustomerTypeSelect"] as SelectList, "(all)", new { onchange = "this.form.submit();", @class = "form-control" })
    </div>

    <div class="col-sm-6">
        <label class="control-label">Region:</label>
        @Html.DropDownList("RegionId", ViewData["RegionSelect"] as SelectList, "(all)", new { onchange = "this.form.submit();", @class = "form-control" })
    </div>
}

<table class="table">
    <tr>
        <th>Last Name</th>
        <th>First Name</th>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Region</th>
        <th>Type</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.LastName</td>
            <td>@item.FirstName</td>
            <td>@item.Address</td>
            <td>@item.City</td>
            <td>@item.State</td>
            <td>@item.RegionName</td>
            <td>@item.CustomerTypeName</td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.Id })">edit</a> |
                <a href="@Url.Action("Delete", new { id = item.Id })">delete</a>
            </td>
        </tr>
        }
</table>

<p><a href="@Url.Action("Create")">Create</a></p>

